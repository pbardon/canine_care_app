<div class="navbarContainer">
</div>
<div class="app-body">
    <div class="sitterProfileShowInfo">
        <div id="sitterProfileTopContent" class="">
            <div class="">
            </div>
            <div class="row">
                <div id="sitterProfileTopContent" class="panel panel-default">
                    <div class="panel-heading">
                        <h2><%= sitter.escape('sitter_name') %></h2>
                    </div>

                    <div class="panel-body">
                        <div class="row">
                            <div id="sitterProfileLeftContent" class="col-md-6">
                                <div class="sitterShowProfileContent">
                                    <div class="bs-component">
                                        <ul class="list-group">
                                            <li class="list-group-item">
                                                <span class="badge">$<%= sitter.escape('price') %></span>
                                                <h4 class="list-group-item-heading">Price per Night:</h4>
                                            </li>
                                            <li class="list-group-item">
                                              <h4 class="list-group-item-heading">Description:</h4>
                                              <p class="list-group-item-text"><%= sitter.escape('description') %></p>
                                            </li>
                                        </ul>
                                      </div>

                                      <div class="bs-component">
                                          <ul class="list-group">
                                            <li class="list-group-item">
                                              <span class="badge"><%= (sitter.escape('small')) ? "✓" : "✖" %></span>
                                              Accepts Small Dogs?
                                            </li>
                                            <li class="list-group-item">
                                              <span class="badge"><%= (sitter.escape('medium')) ? "✓" : "✖" %></span>
                                              Accepts Medium Dogs?
                                            </li>
                                            <li class="list-group-item">
                                              <span class="badge"><%= (sitter.escape('large')) ? "✓" : "✖" %></span>
                                              Accepts Large Dogs?
                                            </li>
                                          </ul>
                                    </div>
                                </div>
                            </div>

                            <div id="sitterProfileRightContent" class="col-md-6">
                                <div class="row">
                                    <div id="sitterProfileImageContent" class="panel panel-default col-md-8 col-md-offset-2">
                                      <div id="sitterProfileImage">
                                        <img class="img-responsive img-portfolio" src="<%= sitter.escape('sitter_photo_large') %>">
                                      </div>
                                    </div>
                                    <div class="col-md-8 col-md-offset-2">
                                        <span class="sitterProfileButtons">
                                          <button class="btn btn-primary editSitterInfo" data-id="<%= sitter.escape('id') %>">Edit Sitter Information </button>
                                          <button class="removeSitterAccount btn btn-danger">Remove Sitter Listing</button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                  <div class="bs-component">
                                      <ul class="profileComments list-group">
                                          <li class="list-group-item">
                                              <h4 class="list-group-item-heading">Comments:</h4>
                                          </li>
                                          <li class="list-group-item sitterComments">
                                          </li>
                                      </ul>
                                  </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
