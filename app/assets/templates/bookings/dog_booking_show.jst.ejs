<div class="dogBooking">
    <div class="xw">
        <div class="card">
            <div class="card-header">
                <div class="">
                    <h4><a href="#/sitters/<%= sitter.get('id') %>"><%= sitter.get('sitter_name') %></a> </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-2">
                        <div class="thumbnail">
                            <img class="img-responsive user-photo" src="<%= sitter.get('sitter_photo_small') %>">
                        </div><!-- /thumbnail -->
                    </div><!-- /col-sm-1 -->
                    <div class="col-sm-8">
                        <table class="table table-responsive-sm table-hover table-outline mb-0">
                            <thead class="thead-light">
                                <tr>
                                  <th>Date Start:</th>
                                  <th>Date End:</th>
                                  <th>Status:</th>
                                  <th>Price/Night:</th>
                              </tr>
                            </thead>
                          <tr>
                            <td><%= booking.escape('date_start') %> </td>
                            <td><%= booking.escape('date_end') %> </td>
                            <td>
                              <% if (booking.get('confirmed')) { %>
                                <span style="color:#3EFF1F">Confirmed</span>
                              <% }else { %>
                                <span style="color:#FFD822">Pending</span>
                              <% }%>
                            </td>
                            <td>
                              $<%= sitter.get('price') %>
                            </td>
                          </tr>
                        </table>
                    </div>
                </div>

                <div class="row">
                    <div class="offset-sm-3">
                        <% if (booking.get('confirmed')) { %>
                          <h4>Address:</h4>
                          <div class="sitterAddress">
                            <%= sitter.escape('street_address') %>
                            <%= sitter.escape('city') %>, <%= sitter.escape('state') %>
                            <%= sitter.escape('zipcode') %>
                          </div>
                        <%  } %>
                    </div>
                </div>
                </div><!-- /panel-body -->
        </div><!-- /panel panel-default -->
    </div><!-- /row -->
</div><!-- /container -->
