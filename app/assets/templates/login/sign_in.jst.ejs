<div class="container">
    <div class="sign-in-form-container">
      <label>Sign In!</label>

      <form action="/session" method="post" id="sign-in-form">
        <input type="hidden"
            name="authenticity_token"
            value="<%= token %>">

        <div class="form-group">
          <label for="emailCredential">Email Address:</label>
          <input
            type="email"
            name="user[email]"
            class="form-control"
            id="emailCredential"
            placeholder="Enter Email Address">
        </div>

        <div class="form-group">
          <label for="passwordCredential">Password:</label>
          <input
            type="password"
            name="user[password]"
            class="form-control"
            id="passwordCredential"
            placeholder="Password">
        </div>


        <span><input type="submit" value="Sign In!" class="btn btn-success">
            <span id="button-spacer">
            </span>
        </span>
      </form>
    </div>
</div>
