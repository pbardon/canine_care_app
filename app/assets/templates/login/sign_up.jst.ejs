<div class="container signInContainer">
    <div class="row">
    <div class="col-lg-12">
            <h1 class="page-header">
                Welcome to Canine Care
            </h1>
        </div>
        <div class="col-md-2">
        </div>

        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Sign Up!<h6><a href="#/sign_in">(login)</a></h6></h3>

                </div>
                <div class="panel-body">
                    <form action="/session" method="post" id="sign-in-form">
                        <input type="hidden"
                        name="authenticity_token"
                        value="<%= token %>">


                        <div class="form-group">
                        <label for="emailCredential">Name:</label>
                        <input
                        type="text"
                        name="user[name]"
                        class="form-control"
                        id="name"
                        placeholder="Enter Your Name">
                        </div>

                        <div class="form-group">
                        <label for="emailCredential">Email Address:</label>
                        <input
                        type="email"
                        name="user[email]"
                        class="form-control"
                        id="emailCredential"
                        placeholder="Enter Email Address">
                        </div>

                        <div class="form-group">
                        <label for="passwordCredential">Password:</label>
                        <input
                        type="password"
                        name="user[password]"
                        class="form-control"
                        id="passwordCredential"
                        placeholder="Password">
                        </div>

                        <div class="form-group">
                        <label for="passwordCredential">Password Confirm:</label>
                        <input
                        type="password"
                        name="user[password]"
                        class="form-control"
                        id="passwordConfirmCredential"
                        placeholder="Password">
                        </div>

                        <br>
                        <div class="col-md-12">
                            <div class="errorMessage">
                                <button type="button" class="errorClose close">&times;</button>
                                <div class="errorMessageContent">
                                </div>
                            </div>
                        </div>
                        <br>



                        <span><input type="submit" value="Sign Up!" class="btn btn-default">
                        <span id="button-spacer">
                        </span>
                        </span>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-2">
        </div>
    </div>
</div>
