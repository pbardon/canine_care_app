<div class="navbarContainer">
</div>

<div class="container">

    <div id="editDogForm" class="card">
        <div class="card-header">
            <strong>
                <% if (dog.get('name')) { %>
                  Edit Dog Information
                <% } else { %>
                  Add A New Dog!
                <% } %>
            </strong>
        </div>
        <div class="card-body">
            <form>
                <div class="form-row">
                    <div class="col">
                        <div class="form-group">
                              <label for="dogName" class="control-label">Name:</label>
                              <div class="col-lg-10">
                                <input type="text"
                                      class="form-control"
                                      id="dogName"
                                      name="name"
                                      placeholder="Dog Name"
                                      value="<%= dog.escape('name') %>">
                              </div>
                        </div>
                        <div class="form-group">
                          <label for="dogAge" class="control-label">Age:</label>
                          <div class="col-lg-10">
                            <input type="text"
                                  class="form-control"
                                  id="dogAge"
                                  placeholder="Age"
                                  name="age"
                                  value="<%= dog.escape('age') %>">
                          </div>
                        </div>
                    </div>

                    <div class="col">
                        <div id="profileImage">
                            <img class="img-responsive img-portfolio dogEditPhoto" src="<%= dog.get('dog_photo_large') %>">
                        </div>

                    </div>
                </div>

                <div class="form-row">

                    <div class="col">
                        <div class="form-group">
                          <label for="dogDescription" class="control-label">Description:</label>
                          <div class="col-lg-10">
                            <textarea class="form-control"
                                      rows="3"
                                      id="dogDescription"
                                      name="description">
                                      <%= dog.escape('description') %>
                            </textarea>
                          </div>
                        </div>
                    </div>

                    <div class="col">
                        <div class="form-group">
                          <label class="control-label">Size:</label>
                          <div class="col-lg-10">
                            <div class="radio">
                              <label>
                                <input type="radio"
                                       name="size"
                                       id="smallOption"
                                       value="small"
                                       checked="<%= (dog.escape('size') === 'small') ? 'true' : 'false' %>">
                                  Small
                              </label>
                            </div>
                            <div class="radio">
                              <label>
                                <input type="radio"
                                       name="size"
                                       id="mediumOption"
                                       value="medium"
                                       checked="<%= (dog.escape('size') === 'medium') ? 'true' : 'false' %>">
                                    Medium
                              </label>
                            </div>
                            <div class="radio">
                              <label>
                                <input type="radio"
                                       name="size"
                                       id="largeOption"
                                       value="large"
                                       checked="<%= (dog.escape('size') === 'large') ? 'true' : 'false' %>">
                                    Large
                              </label>
                            </div>
                          </div>
                      </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col">
                        <div class="form-group">
                            <% if (typeof (dog.get('dog_photo_small')) === 'undefined') { %>

                            <label for="addPic">Add A Picture of Your Dog:</label>
                            <br>
                            <input type="file" name="dog_photo" id="addPic">

                            <% }else { %>

                              <label for="addPic">Change Dog Picture:</label>
                              <br>
                              <input type="file" name="dog_photo" id="addPic">
                            <% } %>
                        </div>
                    </div>

                </div>
                <div class="form-row">
                    <div class="col">
                        <% if (dog.get('id')) { %>
                          <button type='submit' class='editDogInfo btn btn-primary'>Update Dog Informaton</button>
                          <button class='remove btn btn-outline-danger'>Remove Dog</button>
                        <% }else { %>
                          <button type='submit' class='addSubmit btn btn-success'>Add Dog</button>
                        <%  } %>

                    </div>

                </div>
                <div class="form-row">
                </div>
            </form>
        </div>
    </div>
</div>
