<div class="navbarContainer">
</div>

<div class="container">

    <div id="newDogForm" class="well bs-component">
        <div class="errors">

        </div>
        <form class="form-horizontal">
                    <fieldset>
                          <legend>
                              <% if (dog.get('name')) { %>
                                Edit Dog Information
                              <% } else { %>
                                Add A New Dog!
                              <% } %>
                          </legend>
                          <div class="form-group">
                            <label for="dogName" class="col-lg-2 control-label">Name:</label>
                            <div class="col-lg-10">
                              <input type="text"
                                    class="form-control"
                                    id="dogName"
                                    name="name"
                                    placeholder="Dog Name"
                                    value="<%= dog.escape('name') %>">
                            </div>
                          </div>
                          <div class="form-group">
                            <label for="dogAge" class="col-lg-2 control-label">Age:</label>
                            <div class="col-lg-10">
                              <input type="text"
                                    class="form-control"
                                    id="dogAge"
                                    placeholder="Age"
                                    name="age"
                                    value="<%= dog.escape('age') %>">
                            </div>
                          </div>

                          <div class="form-group">
                            <label for="dogDescription" class="col-lg-2 control-label">Description:</label>
                            <div class="col-lg-10">
                              <textarea class="form-control"
                                        rows="3"
                                        id="dogDescription"
                                        name="description">
                                        <%= dog.escape('description') %>
                              </textarea>
                            </div>
                          </div>

                          <div class="form-group">
                            <label class="col-lg-2 control-label">Size:</label>
                            <div class="col-lg-10">
                              <div class="radio">
                                <label>
                                  <input type="radio"
                                         name="size"
                                         id="smallOption"
                                         value="small"
                                         checked="<%= (dog.escape('size') === 'small') ? 'true' : 'false' %>">
                                    Small
                                </label>
                              </div>
                              <div class="radio">
                                <label>
                                  <input type="radio"
                                         name="size"
                                         id="size"
                                         value="medium">
                                      Medium
                                </label>
                              </div>
                              <div class="radio">
                                <label>
                                  <input type="radio"
                                         name="size"
                                         id="largeOption"
                                         value="large">
                                      Large
                                </label>
                              </div>
                            </div>
                        </div>

                        <% if (typeof (dog.get('dog_photo_small')) === 'undefined') { %>

                        <label for="addPic">Add A Picture of Your Dog:</label>
                        <br>
                        <input type="file" name="dog_photo" id="addPic">

                        <% }else { %>

                          <label for="addPic">Change Dog Picture:</label>
                          <br>
                          <input type="file" name="dog_photo" id="addPic">


                        <% } %>

                        <br>
                        <br>

                        <% if (dog.get('id')) { %>
                          <button type='submit' class='addSubmit btn btn-primary'>Edit Dog</button>
                        <% }else { %>
                          <button type='submit' class='addSubmit btn btn-success'>Add Dog</button>
                        <%  } %>
                    </fieldset>
          </form>
    </div>
</div>
